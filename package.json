{
  "name": "@celler/monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "node": ">=20 <21"
  },
  "scripts": {
    "dev:web": "npm run -w @celler/web dev",
    "dev:api": "npm run -w @celler/api dev",
    "build:web": "npm run -w @celler/web build",
    "start:web": "npm run -w @celler/web preview",
    "start:api": "npm run -w @celler/api start",
    "dev": "echo 'Use: npm run dev:web | npm run dev:api'"
  }
}
